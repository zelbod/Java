
public class Study {
	
	public static void negative (int x){
		bottles(x-1);
	}
	
	public static void bottles (int n){	
		if (n <= 0){
		System.out.println("No bottles of beer on the wall, "
				+ "no bottles of beer, ya’ can’t take one down, "
				+ "ya’ can’t pass it around, "
				+ "’cause there are no more bottles "
				+ "of beer on the wall!");	
		}else{			
			System.out.println(n+ " bottles of beer on the wall,"
					+ n  + " bottles of beer, ya’ take one"
					+ "down, ya’ pass it around,");
					
			System.out.println(n + " bottles of beer on the wall.");		
			negative(n);				
			
		}
	}
	
public static void main(String[] args) {
	bottles(99);
	
	}
}

